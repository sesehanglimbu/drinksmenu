body { 
  font-family: Arial, sans-serif;
  margin: 20px;
  background:#f6f6f6;
 }
h1 {
       margin-bottom: 6px;
  }
.muted {
   color:#666; margin-top:0;
   }
.panel, .card {
   background:#fff;
    padding:12px;
     border-radius:12px;
      box-shadow:0 2px 6px rgba(0,0,0,.08);
     }
.panel {
   margin-bottom: 14px;
   }
.row {
   display:flex;
    gap:10px;
    flex-wrap:wrap;
     align-items:center;
      margin: 10px 0; }
input { padding:10px; border-radius:10px; border:1px solid #ccc; min-width: 180px; }
    button { padding:10px 12px; border:0; border-radius:10px; cursor:pointer; }
    button.secondary { background:#eee; }
    button.danger { background:#ffdddd; }
    button:hover { opacity: .92; }
    .grid { display:grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap:12px; }
    .card h3 { margin:0 0 6px 0; }
    .kv { margin:4px 0; }
    .codebox { font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono"; background:#f0f0f0; padding:10px; border-radius:10px; white-space:pre-wrap; }
    .small { font-size: 13px; color:#333; }